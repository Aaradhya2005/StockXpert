<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.inventory.controller.InventoryController"
      style="-fx-background-color: linear-gradient(to bottom right, #1a2a6c, #b21f1f, #fdbb2d);"
      minWidth="1400" minHeight="800" prefWidth="1600" prefHeight="900">
    <padding>
        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
    </padding>

    <Text text="Product Management" 
          style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-fill: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 15, 0, 0, 3);" />

    <!-- Main Content Area -->
    <HBox spacing="30" VBox.vgrow="ALWAYS">
        
        <!-- Left Side - Product Form -->
        <VBox spacing="20" alignment="TOP_CENTER" minWidth="400" prefWidth="450">
            
            <!-- Search Section -->
            <VBox spacing="10" alignment="CENTER"
                  style="-fx-background-color: rgba(255, 255, 255, 0.15); -fx-background-radius: 15; -fx-padding: 15;">
                <Label text="Search Products" 
                       style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />
                <HBox spacing="10" alignment="CENTER">
                    <TextField fx:id="searchField" 
                              promptText="Enter Product ID to search..."
                              style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 20; -fx-padding: 10; -fx-font-size: 14px; -fx-min-width: 200;" />
                    <Button text="Search" onAction="#handleSearch"
                            style="-fx-background-color: linear-gradient(to bottom, #27ae60, #229954); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 20;" />
                </HBox>
                <HBox spacing="10" alignment="CENTER">
                    <Button text="Show All" onAction="#handleShowAll"
                            style="-fx-background-color: linear-gradient(to bottom, #f39c12, #e67e22); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 20;" />
                    <Button fx:id="backButton" text="Back" onAction="#handleShowAll" visible="false"
                            style="-fx-background-color: linear-gradient(to bottom, #95a5a6, #7f8c8d); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 20;" />
                </HBox>
            </VBox>

            <!-- Product Form -->
            <VBox spacing="15" alignment="TOP_CENTER"
                  style="-fx-background-color: rgba(255, 255, 255, 0.15); -fx-background-radius: 20; -fx-padding: 25;">
                <Label text="Product Details" 
                       style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
                
                <GridPane hgap="15" vgap="12" alignment="CENTER">
                    <Label text="Product ID:" 
                           style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"
                           GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="idField" 
                              style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 20; -fx-padding: 10; -fx-font-size: 14px; -fx-min-width: 200;"
                              GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="Name:" 
                           style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"
                           GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="nameField" 
                              style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 20; -fx-padding: 10; -fx-font-size: 14px; -fx-min-width: 200;"
                              GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Price:" 
                           style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"
                           GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="priceField" 
                              style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 20; -fx-padding: 10; -fx-font-size: 14px; -fx-min-width: 200;"
                              GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label text="Quantity:" 
                           style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"
                           GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField fx:id="quantityField" 
                              style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 20; -fx-padding: 10; -fx-font-size: 14px; -fx-min-width: 200;"
                              GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <Label text="Low Stock Threshold:" 
                           style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"
                           GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <TextField fx:id="thresholdField" 
                              style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 20; -fx-padding: 10; -fx-font-size: 14px; -fx-min-width: 200;"
                              GridPane.columnIndex="1" GridPane.rowIndex="4" />

                    <Label text="Alert Enabled:" 
                           style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"
                           GridPane.columnIndex="0" GridPane.rowIndex="5" />
                    <CheckBox fx:id="alertEnabledCheckBox" selected="true"
                              style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"
                              GridPane.columnIndex="1" GridPane.rowIndex="5" />
                </GridPane>
            </VBox>

            <!-- Action Buttons -->
            <VBox spacing="10" alignment="CENTER">
                <HBox spacing="10" alignment="CENTER">
                    <Button text="Add" onAction="#handleAddProduct"
                            style="-fx-background-color: linear-gradient(to bottom, #4a90e2, #357abd); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 25; -fx-background-radius: 25; -fx-min-width: 100;" />
                    <Button text="Update" onAction="#handleUpdateProduct"
                            style="-fx-background-color: linear-gradient(to bottom, #4a90e2, #357abd); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 25; -fx-background-radius: 25; -fx-min-width: 100;" />
                    <Button text="Delete" onAction="#handleDeleteProduct"
                            style="-fx-background-color: linear-gradient(to bottom, #4a90e2, #357abd); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 25; -fx-background-radius: 25; -fx-min-width: 100;" />
                </HBox>
                <HBox spacing="10" alignment="CENTER">
                    <Button text="Clear" onAction="#handleClearFields"
                            style="-fx-background-color: linear-gradient(to bottom, #95a5a6, #7f8c8d); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 25; -fx-background-radius: 25; -fx-min-width: 100;" />
                    <Button text="Logout" onAction="#handleLogout"
                            style="-fx-background-color: linear-gradient(to bottom, #e74c3c, #c0392b); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 25; -fx-background-radius: 25; -fx-min-width: 100;" />
                </HBox>
            </VBox>
        </VBox>

        <!-- Right Side - Tables -->
        <VBox spacing="20" alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
            
            <!-- Low Stock Alert Section -->
            <VBox spacing="10" alignment="CENTER"
                  style="-fx-background-color: rgba(231, 76, 60, 0.2); -fx-background-radius: 15; -fx-padding: 15;">
                <Label text="⚠️ Low Stock Alerts" 
                       style="-fx-text-fill: #e74c3c; -fx-font-size: 18px; -fx-font-weight: bold;" />
                <Label fx:id="lowStockCountLabel" text="No low stock items" 
                       style="-fx-text-fill: #e74c3c; -fx-font-size: 14px; -fx-font-weight: bold;" />
                <Button text="View Low Stock Items" onAction="#handleViewLowStock"
                        style="-fx-background-color: linear-gradient(to bottom, #e74c3c, #c0392b); -fx-text-fill: white; -fx-font-size: 12px; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 20; -fx-min-width: 150;" />
            </VBox>

            <!-- Main Product Table -->
            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <Label text="All Products" 
                       style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />
                <TableView fx:id="productTable" VBox.vgrow="ALWAYS"
                          style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 15; -fx-padding: 10;"
                          prefHeight="300" minHeight="200">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="80" 
                                    style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #34495e); -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12;" />
                        <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"
                                    style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #34495e); -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12;" />
                        <TableColumn fx:id="priceColumn" text="Price" prefWidth="80"
                                    style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #34495e); -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12;" />
                        <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="80"
                                    style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #34495e); -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12;" />
                        <TableColumn fx:id="thresholdColumn" text="Threshold" prefWidth="80"
                                    style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #34495e); -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12;" />
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="80"
                                    style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #34495e); -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12;" />
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </HBox>

    <Label fx:id="messageLabel" 
           style="-fx-text-fill: #e74c3c; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10; -fx-background-color: rgba(231, 76, 60, 0.1); -fx-background-radius: 10;" />
</VBox> 