<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.inventory.controller.AdminController"
      style="-fx-background-color: linear-gradient(to bottom right, #1a2a6c, #b21f1f, #fdbb2d);"
      minWidth="1000" minHeight="700" prefWidth="1200" prefHeight="850">
    <padding>
        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
    </padding>

    <Text text="Admin Panel" 
          style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-fill: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 15, 0, 0, 3);" />

    <TabPane style="-fx-background-color: rgba(255, 255, 255, 0.1); -fx-background-radius: 15;">
        <!-- Users Tab -->
        <Tab text="Users" closable="false">
            <VBox spacing="10" style="-fx-padding: 20;">
                <!-- User Search Section -->
                <HBox spacing="10" alignment="CENTER"
                      style="-fx-background-color: rgba(255, 255, 255, 0.15); -fx-background-radius: 15; -fx-padding: 15;">
                    <TextField fx:id="userSearchField" 
                              promptText="Enter Username to search..."
                              style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 20; -fx-padding: 10; -fx-font-size: 14px; -fx-min-width: 200;" />
                    <Button text="Search Users" onAction="#handleSearchUsers"
                            style="-fx-background-color: linear-gradient(to bottom, #27ae60, #229954); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 20;" />
                    <Button fx:id="userBackButton" text="Show All Users" onAction="#handleShowAllUsers"
                            style="-fx-background-color: linear-gradient(to bottom, #f39c12, #e67e22); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 20;" />
                </HBox>

                <TableView fx:id="userTable" VBox.vgrow="ALWAYS"
                          style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 15;"
                          prefHeight="300" minHeight="200" maxHeight="500">
                    <columns>
                        <TableColumn fx:id="userIdColumn" text="ID" prefWidth="100" />
                        <TableColumn fx:id="usernameColumn" text="Username" prefWidth="200" />
                        <TableColumn fx:id="createdAtColumn" text="Created At" prefWidth="200" />
                    </columns>
                </TableView>
                <HBox spacing="10" alignment="CENTER">
                    <Button text="Delete Selected User" onAction="#handleDeleteUser"
                            style="-fx-background-color: linear-gradient(to bottom, #e74c3c, #c0392b); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 25; -fx-background-radius: 25;" />
                </HBox>
            </VBox>
        </Tab>

        <!-- Products Tab -->
        <Tab text="Products" closable="false">
            <VBox spacing="10" style="-fx-padding: 20;">
                <!-- Product Search Section -->
                <HBox spacing="10" alignment="CENTER"
                      style="-fx-background-color: rgba(255, 255, 255, 0.15); -fx-background-radius: 15; -fx-padding: 15;">
                    <TextField fx:id="productSearchField" 
                              promptText="Enter Product ID to search..."
                              style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 20; -fx-padding: 10; -fx-font-size: 14px; -fx-min-width: 200;" />
                    <Button text="Search Products" onAction="#handleSearchProducts"
                            style="-fx-background-color: linear-gradient(to bottom, #27ae60, #229954); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 20;" />
                    <Button fx:id="productBackButton" text="Show All Products" onAction="#handleShowAllProducts"
                            style="-fx-background-color: linear-gradient(to bottom, #f39c12, #e67e22); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 20;" />
                </HBox>

                <TableView fx:id="productTable" VBox.vgrow="ALWAYS"
                          style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 15;"
                          prefHeight="350" minHeight="200" maxHeight="600">
                    <columns>
                        <TableColumn fx:id="productIdColumn" text="ID" prefWidth="100" />
                        <TableColumn fx:id="productNameColumn" text="Name" prefWidth="200" />
                        <TableColumn fx:id="productPriceColumn" text="Price" prefWidth="100" />
                        <TableColumn fx:id="productQuantityColumn" text="Quantity" prefWidth="100" />
                        <TableColumn fx:id="productUserIdColumn" text="User ID" prefWidth="100" />
                    </columns>
                </TableView>
                <HBox spacing="10" alignment="CENTER">
                    <Button text="Delete Selected Product" onAction="#handleDeleteProduct"
                            style="-fx-background-color: linear-gradient(to bottom, #e74c3c, #c0392b); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 25; -fx-background-radius: 25;" />
                    <Button text="Delete All Products" onAction="#handleDeleteAllProducts"
                            style="-fx-background-color: linear-gradient(to bottom, #e74c3c, #c0392b); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 25; -fx-background-radius: 25;" />
                </HBox>
            </VBox>
        </Tab>

        <!-- Low Stock Overview Tab -->
        <Tab text="Low Stock Overview" closable="false">
            <VBox spacing="10" style="-fx-padding: 20;">
                <!-- Low Stock Overview Section -->
                <VBox spacing="10" alignment="CENTER"
                      style="-fx-background-color: rgba(231, 76, 60, 0.2); -fx-background-radius: 15; -fx-padding: 15;">
                    <Label text="⚠️ Low Stock Alert Overview" 
                           style="-fx-text-fill: #e74c3c; -fx-font-size: 18px; -fx-font-weight: bold;" />
                    <Label fx:id="lowStockOverviewLabel" text="Loading..." 
                           style="-fx-text-fill: #e74c3c; -fx-font-size: 14px; -fx-font-weight: bold;" />
                </VBox>

                <TableView fx:id="lowStockTable" VBox.vgrow="ALWAYS"
                          style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 15;"
                          prefHeight="350" minHeight="200" maxHeight="600">
                    <columns>
                        <TableColumn fx:id="lowStockIdColumn" text="ID" prefWidth="100" />
                        <TableColumn fx:id="lowStockNameColumn" text="Name" prefWidth="200" />
                        <TableColumn fx:id="lowStockPriceColumn" text="Price" prefWidth="100" />
                        <TableColumn fx:id="lowStockQuantityColumn" text="Quantity" prefWidth="100" />
                        <TableColumn fx:id="lowStockThresholdColumn" text="Threshold" prefWidth="100" />
                        <TableColumn fx:id="lowStockUserIdColumn" text="User ID" prefWidth="100" />
                        <TableColumn fx:id="lowStockStatusColumn" text="Status" prefWidth="100" />
                    </columns>
                </TableView>
                <HBox spacing="10" alignment="CENTER">
                    <Button text="Refresh Low Stock Data" onAction="#handleRefreshLowStock"
                            style="-fx-background-color: linear-gradient(to bottom, #3498db, #2980b9); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 25; -fx-background-radius: 25;" />
                </HBox>
            </VBox>
        </Tab>
    </TabPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Logout" onAction="#handleLogout"
                style="-fx-background-color: linear-gradient(to bottom, #e74c3c, #c0392b); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 25; -fx-background-radius: 25;" />
    </HBox>

    <Label fx:id="messageLabel" 
           style="-fx-text-fill: #e74c3c; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10; -fx-background-color: rgba(231, 76, 60, 0.1); -fx-background-radius: 10;" />
</VBox> 